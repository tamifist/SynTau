<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AutoGene.Mobile.Pages.SystemMonitorPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:telerikCommon="clr-namespace:Telerik.XamarinForms.Common;assembly=Telerik.XamarinForms.Common"
    xmlns:telerikGauges="clr-namespace:Telerik.XamarinForms.DataVisualization.Gauges;assembly=Telerik.XamarinForms.DataVisualization"
    BackgroundColor="Black">
    <Grid
        Padding="100,0,100,0"
        ColumnSpacing="0"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <telerikGauges:RadRadialGauge
            x:Name="manometer1"
            Grid.Row="0"
            Grid.Column="0">
            <telerikGauges:RadRadialGauge.Axis>
                <telerikGauges:GaugeLinearAxis
                    Maximum="200"
                    Minimum="0"
                    Step="20" />
            </telerikGauges:RadRadialGauge.Axis>
            <telerikGauges:RadRadialGauge.Indicators>
                <telerikGauges:GaugeNeedleIndicator
                    Position="Start"
                    Offset="30"
                    Value="60" />
            </telerikGauges:RadRadialGauge.Indicators>
            <telerikGauges:RadRadialGauge.Ranges>
                <telerikGauges:GaugeRangesDefinition>
                    <telerikGauges:GaugeRange
                        Color="Green"
                        From="0"
                        To="150" />
                    <telerikGauges:GaugeGradientRange From="150" To="200">
                        <telerikCommon:RadGradientStop Offset="150" Color="Yellow" />
                        <telerikCommon:RadGradientStop Offset="200" Color="Red" />
                    </telerikGauges:GaugeGradientRange>
                </telerikGauges:GaugeRangesDefinition>
            </telerikGauges:RadRadialGauge.Ranges>
        </telerikGauges:RadRadialGauge>
        <telerikGauges:RadRadialGauge
            x:Name="manometer2"
            Grid.Row="0"
            Grid.Column="1">
            <telerikGauges:RadRadialGauge.Axis>
                <telerikGauges:GaugeLinearAxis
                    Maximum="200"
                    Minimum="0"
                    Step="20" />
            </telerikGauges:RadRadialGauge.Axis>
            <telerikGauges:RadRadialGauge.Indicators>
                <telerikGauges:GaugeNeedleIndicator
                    Position="Start"
                    Offset="30"
                    Value="60" />
            </telerikGauges:RadRadialGauge.Indicators>
            <telerikGauges:RadRadialGauge.Ranges>
                <telerikGauges:GaugeRangesDefinition>
                    <telerikGauges:GaugeRange
                        Color="Green"
                        From="0"
                        To="150" />
                    <telerikGauges:GaugeGradientRange From="150" To="200">
                        <telerikCommon:RadGradientStop Offset="150" Color="Yellow" />
                        <telerikCommon:RadGradientStop Offset="200" Color="Red" />
                    </telerikGauges:GaugeGradientRange>
                </telerikGauges:GaugeRangesDefinition>
            </telerikGauges:RadRadialGauge.Ranges>
        </telerikGauges:RadRadialGauge>
        <telerikGauges:RadRadialGauge
            x:Name="manometer3"
            Grid.Row="1"
            Grid.Column="0">
            <telerikGauges:RadRadialGauge.Axis>
                <telerikGauges:GaugeLinearAxis
                    Maximum="200"
                    Minimum="0"
                    Step="20" />
            </telerikGauges:RadRadialGauge.Axis>
            <telerikGauges:RadRadialGauge.Indicators>
                <telerikGauges:GaugeNeedleIndicator
                    Position="Start"
                    Offset="30"
                    Value="60" />
            </telerikGauges:RadRadialGauge.Indicators>
            <telerikGauges:RadRadialGauge.Ranges>
                <telerikGauges:GaugeRangesDefinition>
                    <telerikGauges:GaugeRange
                        Color="Green"
                        From="0"
                        To="150" />
                    <telerikGauges:GaugeGradientRange From="150" To="200">
                        <telerikCommon:RadGradientStop Offset="150" Color="Yellow" />
                        <telerikCommon:RadGradientStop Offset="200" Color="Red" />
                    </telerikGauges:GaugeGradientRange>
                </telerikGauges:GaugeRangesDefinition>
            </telerikGauges:RadRadialGauge.Ranges>
        </telerikGauges:RadRadialGauge>
        <telerikGauges:RadRadialGauge
            x:Name="manometer4"
            Grid.Row="1"
            Grid.Column="1">
            <telerikGauges:RadRadialGauge.Axis>
                <telerikGauges:GaugeLinearAxis
                    Maximum="200"
                    Minimum="0"
                    Step="20" />
            </telerikGauges:RadRadialGauge.Axis>
            <telerikGauges:RadRadialGauge.Indicators>
                <telerikGauges:GaugeNeedleIndicator
                    Position="Start"
                    Offset="30"
                    Value="60" />
            </telerikGauges:RadRadialGauge.Indicators>
            <telerikGauges:RadRadialGauge.Ranges>
                <telerikGauges:GaugeRangesDefinition>
                    <telerikGauges:GaugeRange
                        Color="Green"
                        From="0"
                        To="150" />
                    <telerikGauges:GaugeGradientRange From="150" To="200">
                        <telerikCommon:RadGradientStop Offset="150" Color="Yellow" />
                        <telerikCommon:RadGradientStop Offset="200" Color="Red" />
                    </telerikGauges:GaugeGradientRange>
                </telerikGauges:GaugeRangesDefinition>
            </telerikGauges:RadRadialGauge.Ranges>
        </telerikGauges:RadRadialGauge>
        <telerikGauges:RadHorizontalGauge
            x:Name="progressBar"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            IsVisible="False">
            <telerikGauges:RadHorizontalGauge.Ranges>
                <telerikGauges:GaugeRangesDefinition>
                    <telerikGauges:GaugeRange
                        Color="Green"
                        From="0"
                        To="0" />
                </telerikGauges:GaugeRangesDefinition>
            </telerikGauges:RadHorizontalGauge.Ranges>
        </telerikGauges:RadHorizontalGauge>
    </Grid>

</ContentPage>