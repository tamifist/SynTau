@using Business.Contracts.ViewModels.Account;

@model CreateAccountViewModel

@{
    ViewBag.Title = "Create a New Account";
    Layout = "~/Views/Shared/_LayoutNonAuth.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create a New Account</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("CreateAccount", "Identity", FormMethod.Post, new { id = "createAccountForm" }))
                    {
                        @Html.ValidationSummary()

                        @Html.AntiForgeryToken()

                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.FirstName, new {placeholder = "First name", @class = "form-control", required = "required" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.LastName, new {placeholder = "Last name", @class = "form-control", required = "required" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email, new {placeholder = "Email", @class = "form-control", @type = "email", required = "required" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Password, new {placeholder = "Password", @class = "form-control", @type = "password", required = "required" })
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Create Account</button>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

