@using Business.Contracts.ViewModels.Account;

@model LoginViewModel

@{
    ViewBag.Title = "Log In";
    Layout = "~/Views/Shared/_LayoutNonAuth.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Log In</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Identity", FormMethod.Post, new { id = "logInForm" }))
                    {
                        @Html.ValidationSummary()

                        @Html.AntiForgeryToken()

                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email, new {placeholder = "Email", @class = "form-control", @type = "email", required = "required" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Password, new {placeholder = "Password", @class = "form-control", @type = "password", required = "required" })
                            </div>
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(model => model.StayLoggedInToday)Remember Me
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Log In</button>
                            <a href="@Url.Action("CreateAccount", "Identity", new {area = ""})" class="btn btn-lg btn-success btn-block">Create Account</a>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

